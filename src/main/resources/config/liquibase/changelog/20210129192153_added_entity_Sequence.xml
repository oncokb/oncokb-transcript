<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity Sequence.
    -->
    <changeSet id="20210129192153-1" author="jhipster">
        <createTable tableName="sequence">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="entrez_gene_id" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="hugo_symbol" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="reference_genome" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="ensembl_transcript_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="ensembl_protein_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="reference_sequence_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="protein_sequence" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
